<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <name>ASF Datapool Search Results</name>
    <description>Search Performed: {{search_time}}</description>
    <Style id="yellowLineGreenPoly">
      <LineStyle>
        <color>30ff8800</color>
        <width>4</width>
      </LineStyle>
      <PolyStyle>
        <color>7f00ff00</color>
      </PolyStyle>
    </Style>
    {%- for r in results %}
    <Placemark>
      <name>{{r.granuleName}}</name>
      <description> &lt;![CDATA[  <h1>{{r.platform}} ({{r.configurationName}}), acquired {{r.sceneDate}}</h1><h2>{{r.downloadUrl}}</h2><div style="position:absolute;left:20px;top:200px"><h3>Metadata</h3><ul><li>Processing type: {{r.processingTypeDisplay}}</li><li>Frame: {{r.finalFrame}}</li><li>Path: {{r.relativeOrbit}}</li><li>Orbit: {{r.absoluteOrbit}}</li><li>Start time: {{r.startTime}}</li><li>End time: {{r.stopTime}}</li><li>Faraday Rotation: {{r.faradayRotation}}</li><li>Ascending/Descending: {{r.flightDirection}}</li><li>Off Nadir Angle: {{r.offNadirAngle}}</li></ul></div><div style="position:absolute;left:300px;top:250px"><a href="{{r.browse}}"><img src="{{r.thumbnailUrl}}"/></a></div></description>
      <styleUrl>#yellowLineGreenPoly</styleUrl>
      <Polygon>
        <extrude>1</extrude>
        <altitudeMode>relativeToGround</altitudeMode>
        <outerBoundaryIs>
          <LinearRing>
            <coordinates>
            {%- for p in r.shape %}
              {{p.lon}},{{p.lat}},2000
            {%- endfor %}
            </coordinates>
          </LinearRing>
        </outerBoundaryIs>
      </Polygon>
    </Placemark>
    {%- endfor %}
  </Document>
</kml>
